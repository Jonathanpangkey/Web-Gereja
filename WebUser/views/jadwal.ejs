<div class="container py-5">
  <h1 class="mb-4 text-center py-2">Jadwal Ibadah</h1>
  <div class="row">
    <% jadwals.forEach(jadwal => { %>
    <div class="col-md-6 col-lg-4 mb-4">
      <div class="card h-100">
        <div class="card-body">
          <h2 class="card-text"><strong>Tempat:</strong>  <%= jadwal.tempat_ibadah %></h2>
          <p class="card-text"><strong>Kolom:</strong> <%= jadwal.kolom %></p>
          <p class="card-text"><strong>Pemimpin Ibadah:</strong> <%= jadwal.pemimpin_ibadah %></p>
          <p class="card-text"><strong>Tanggal:</strong> <%= new Date(jadwal.tanggal).toLocaleDateString() %></p>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>
